<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://profile.caption"
        class="it.nexbit.cuba.security.userprofile.web.screens.UserEditProfile"
        datasource="userDs"
        focusComponent="fieldGroup"
        messagesPack="it.nexbit.cuba.security.userprofile.web">
    <dsContext>
        <datasource id="userDs"
                    class="com.haulmont.cuba.security.entity.User"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="buttons"
            spacing="true">
        <groupBox id="groupBox"
                  spacing="true">
            <scrollBox id="scrollBox"
                       orientation="vertical">
                <fieldGroup id="fieldGroup"
                            datasource="userDs">
                    <column id="firstColumn"
                            width="250px">
                        <field id="login"
                               editable="false"
                               property="login"/>
                        <field id="email"
                               property="email"
                               required="true"
                               requiredMessage="msg://profile.emailRequired">
                            <validator
                                    class="com.haulmont.cuba.gui.components.validators.EmailValidator"/>
                        </field>
                        <field id="firstName" property="firstName"/>
                        <field id="lastName" property="lastName"/>
                        <field id="name"
                               property="name"
                               required="true"
                               requiredMessage="msg://profile.nameRequired"/>
                    </column>
                </fieldGroup>
                <grid id="grid"
                      margin="true,false,false,false"
                      spacing="true"
                      width="100%">
                    <columns>
                        <column flex="0.0"/>
                        <column flex="1.0"/>
                    </columns>
                    <rows>
                        <row>
                            <label id="changePasswordLabel"
                                   align="MIDDLE_LEFT"
                                   value="msg://profile.password"/>
                            <button id="changePasswordBtn"
                                    icon="icons/change-pass.png"/>
                        </row>
                    </rows>
                </grid>
            </scrollBox>
        </groupBox>
        <vbox id="buttons"
              margin="true,false,false,false">
            <buttonsPanel>
                <button id="okBtn"
                        icon="icons/ok.png"/>
                <button id="cancelBtn"
                        icon="icons/cancel.png"/>
            </buttonsPanel>
        </vbox>
    </layout>
</window>
